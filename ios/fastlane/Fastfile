default_platform(:ios)

platform :ios do
  ############################################
  # ğŸ”§ Ø¥Ø¹Ø¯Ø§Ø¯ Xcode Ø§Ù„Ù…Ø·Ù„ÙˆØ¨ (Ø§Ø®ØªÙŠØ§Ø±ÙŠ Ø­Ø³Ø¨ CI)
  ############################################
  private_lane :use_xcode do
    UI.header("ğŸ”§ Selecting Xcode 16.2")
    xcode_select("/Applications/Xcode_16.2.app")
  end

  ############################################
  # ğŸ” Lane Ø¹Ø§Ù… Ù„ØªÙˆÙ‚ÙŠØ¹ Ø§Ù„Ø´Ù‡Ø§Ø¯Ø§Øª
  ############################################
  private_lane :setup_code_signing do |options|
    type = options[:type] || "appstore" # Ø£Ùˆ development
    match(
      type: type,
      readonly: true, # Ø§Ø¬Ø¹Ù„Ù‡ true ÙÙŠ CI
      app_identifier: options[:app_identifier]
    )
  end

  ############################################
  # ğŸ Lane Ù„ØªÙˆØ²ÙŠØ¹ dev
  ############################################
  lane :dev do
    use_xcode

    setup_code_signing(
      type: "appstore",
      app_identifier: "com.flutter.structure.dev"
    )

    sh("flutter build ios --release --flavor dev")

    upload_to_testflight(
      skip_waiting_for_build_processing: true
    )
  end

  ############################################
  # ğŸ Lane Ù„ØªÙˆØ²ÙŠØ¹ stage
  ############################################
  lane :stage do
    use_xcode

    setup_code_signing(
      type: "appstore",
      app_identifier: "com.flutter.structure.stage"
    )

    sh("flutter build ios --release --flavor stage")

    upload_to_testflight(
      skip_waiting_for_build_processing: true
    )
  end

  ############################################
  # ğŸ Lane Ù„ØªÙˆØ²ÙŠØ¹ prod
  ############################################
  lane :prod do
    use_xcode

    setup_code_signing(
      type: "appstore",
      app_identifier: "com.flutter.structure.prod"
    )

    sh("flutter build ios --release --flavor prod")

